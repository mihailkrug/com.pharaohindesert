<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesertActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageSwitcher
            android:id="@+id/imSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal">
        </ImageSwitcher>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imSwitch"

            android:layout_alignRight="@id/imSwitch"
            android:layout_alignBottom="@id/imSwitch"
            android:gravity="bottom"


            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idesktop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/baseline_laptop_chromebook_white_48dp" />


            <ImageView
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/baseline_cloud_download_white_48dp" />
            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/baseline_screen_share_white_48dp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>